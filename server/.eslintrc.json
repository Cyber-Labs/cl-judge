{
    "extends": ["eslint:recommended", "prettier"],
    "env": {
      "node": true,
      "browser": false,
      "commonjs": true,
      "es6": true
    },
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "plugins": ["prettier"],
    "rules": {
      "semi": [2, "never"],
      "linebreak-style": ["error", "unix"],
      "prettier/prettier": ["error", { 
        "singleQuote": true,
        "semi": false,
        "tabWidth": 4
        }
      ]
    }
  }